{
  "name": "inspired",
  "version": "0.0.1",
  "description": "Hugo, Tailwind and Netlify. Oh my!",
  "main": "index.js",
  "repository": "https://github.com/nternetinspired/inspired",
  "author": "Seth Warburton",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run build:vite && npm run build:hugo",
    "build:vite": "vite build",
    "build:hugo": "hugo -d ./dist --gc --minify --templateMetricsHints",
    "dev": "run-p dev:**",
    "dev:hugo": "hugo server --buildDrafts --templateMetrics",
    "dev:vite": "vite --host",
    "lint": "eslint src",
    "clean": "rimraf ./node_modules && yarn",
    "prebuild": "rimraf ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.0",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.0",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^10.0.3",
    "babel-eslint": "^10.0.2",
    "browserslist": "^4.15.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.18.1",
    "npm-run-all": "^4.1.5",
    "plugin-error": "^1.0.1",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^7.7.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "tailwindcss": "^3.0.11",
    "utility-opentype": "^0.1.4",
    "vite": "^4.1.3",
    "vite-plugin-restart": "^0.3.1",
    "vite-plugin-svg-icons": "^2.0.1"
  }
}
