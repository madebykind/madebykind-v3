/* ==========================================================================
    BUTTON
   ========================================================================== */


.btn {
  @apply
    antialiased
    border-3 border-transparent
    inline-flex items-center
    font-bold
    gap-5
    leading-none
    no-underline
    p-2.5 lg:px-5
    min-h-[2em] lg:min-h-[3em]
  ;
}

.btn--primary {
  @apply
    bg-indigo 
    text-buff
  ;
}

.btn--secondary {
  @apply
    border-indigo
  ;
}
