/* ==========================================================================
    CONTAINER
   ========================================================================== */


  .container {
    @apply mx-auto;

    max-width: var(--max-width-container);
    width: var(--width-container);
  }


@layer components {
  .bleed {
    margin-left: -4vw;
    margin-right: -4vw;
  }

  .bleed--right {
    margin-right: -4vw;
  }
  
  .bleed--left {
    margin-left: -4vw;
  }
}